{
  "name": "minyatur",
  "version": "1.0.0",
  "description": "Lightweight, modular slider 🧩 with HTML-based config, responsive support 📱 and smart features like zoom 🔎 & fullscreen 🖥️.",
  "type": "module",
  "main": "dist/minyatur.min.js",
  "style": "dist/minyatur.min.css",
  "sass": "src/scss/main.scss",
  "scripts": {
    "dev": "webpack serve --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "release": "npm run build && mkdir -p docs/assets && cp --remove-destination -r dist/. docs/assets"
  },
  "keywords": [
    "slider",
    "carousel",
    "image slider",
    "touch slider",
    "javascript slider",
    "responsive slider",
    "vanilla javascript",
    "modular slider",
    "data attribute slider",
    "html slider",
    "customizable slider",
    "zoom",
    "fullscreen",
    "thumbnail navigation",
    "minyatur"
  ],
  "author": "edukah",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edukah/minyatur.git"
  },
  "bugs": {
    "url": "https://github.com/edukah/minyatur/issues"
  },
  "homepage": "https://edukah.github.io/minyatur/",
  "devDependencies": {
    "@babel/cli": "^7.27.0",
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.23.0",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.23.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-webpack-plugin": "^5.0.0",
    "globals": "^16.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "rimraf": "^5.0.1",
    "sass": "^1.86.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}